section.exam#exam
    .exam-left-row.wow.fadeInLeftBig(data-wow-delay="0.05s")  
        h2.exam-title структура экзамена
        .exam-description Экзамен состоит из трех молудей и длится не более 80 минут:
        ul.program-list
            li.program-item.wow.fadeInUpBig(data-wow-delay="0.1s")
                .program-item-title.wow.fadeIn(data-wow-delay="0.2s") 
                    span.title-mark Модуль 1 
                    span Русский язык
                .program-item-description.wow.fadeInDown(data-wow-delay="0.9s")  
                    p Лексика. Грамматика (тест) <br>Чтение (тест) <br>Аудирование (тест) <br>Письмо (1 задание) <br>Устная речь (3-5 заданий)
            li.program-item.wow.fadeInUpBig(data-wow-delay="0.5s")
                .program-item-title.wow.fadeIn(data-wow-delay="0.6s") 
                    span.title-mark Модуль 2 
                    span История России
                .program-item-description.wow.fadeInDown(data-wow-delay="1.3s")  
                    p Тест из <b>10</b> вопросов
            li.program-item.wow.fadeInUpBig(data-wow-delay="1s")
                .program-item-title.wow.fadeIn(data-wow-delay="1.1s") 
                    span.title-mark Модуль 3 
                    span Основы законодательства РФ
                .program-item-description.wow.fadeInDown(data-wow-delay="1.8s")  
                    p Тест из <b>10</b> вопросов

    .exam-right-row.wow.fadeInRightBig(data-wow-delay="0.05s")  
        .gallery
            .swiper-box
                .swiper.mySwiper 
                    .swiper-wrapper 
                        a.swiper-slide(
                            data-fancybox
                            data-caption="example-01"
                            href="img/example-1.webp"
                        )
                            span.zoom-icon
                            img(src="img/example-1.webp", alt="example-01")
                        a.swiper-slide(
                            data-fancybox
                            data-caption="example-02"
                            href="img/example-2.webp"
                        )
                            span.zoom-icon
                            img(src="img/example-2.webp", alt="example-0")
